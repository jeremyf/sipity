<section itemscope itemtype="http://schema.org/CreativeWork">
  <div class="row">
    <div class="col-xs-12 work-show">
      <div class="page-header">
        <h1 class="work-title">
          <span itemprop="name"><%= @model.title %></span>
        </h1>
        <p class="work-status">
          <%= content_tag :span, ::Sipity.t(scope: :work_types, subject: @model.work_type), class: 'work-type' %> &bull;
          <%= content_tag :span, ::Sipity.t(scope: :processing_states, subject: @model, object: @model.processing_state), class: 'work-processing-state' %>
        </p>
      </div>
    </div>
  </div>
  <div class="feedback-notice">
  <% @model.comments.each do |comment| %>
    <div class="alert alert-warning">
      <p><strong>Feedback from <%= comment.name_of_commentor %> on <%= comment.created_date %></strong>:</p>
      <p><%= comment.comment %></p>
    </div>
  <% end %>
  </div>
  <%= link_to "Back to #{::Sipity.t(scope: :work_types, subject: @model.work_type)}", work_path(id: @model.id) %>
</section>
