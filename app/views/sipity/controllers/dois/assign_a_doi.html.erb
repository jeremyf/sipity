<%= simple_form_for(
  model.assign_a_doi_form,
  url: assign_a_doi_work_doi_path(model.work),
  method: :post,
  as: :doi,
  html: { class: 'assign_a_doi panel panel-primary with-footer' }
) do |f| %>
  <legend class="panel-heading">
    <%= content_tag :h3, t('sipity/dois.panels.existing_doi.title_html'), class: 'panel-title' %>
  </legend>
  <fieldset class="panel-body">
    <%= content_tag :p, t('sipity/dois.panels.existing_doi.hint'), class: 'panel-hint' %>
    <%= f.error_notification %>
    <%= f.input :identifier, input_html: { class: 'form-control' } %>
  </fieldset>
  <%= model.work.with_action_pane('existing_doi', 'panel-footer') do %>
    <%= f.submit %>
  <% end %>
<% end %>
