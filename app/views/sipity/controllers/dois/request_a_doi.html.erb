<h2>Request a DOI?</h2>
<%= simple_form_for(model.request_a_doi_form, url: request_a_doi_work_doi_path(model.work), method: :post, as: :doi) do |f| %>
  <%= f.error_notification %>
  <%= field_set_tag do %>
    <dl>
      <dt>Title</dt>
      <dd><%= f.object.title %></dd>
    <% if f.object.authors.any? %>
      <dt>Authors</dt>
      <dd>
        <ul>
          <% f.object.authors.each do |author| %>
            <li><%= author %></li>
          <% end %>
        </ul>
      </dd>
    </dl>
    <% else %>
      <%= f.input :authors %>
    <% end %>
    <%= f.input :publisher %>
    <%= f.input :publication_date %>
    <%= f.submit %>
  <% end %>
<% end %>