<h1>Additional Search Terms</h1>

<%= simple_form_for(
  model,
  url: request.path,
  method: :post,
  as: :work,
  html: { class: 'simple-form panel panel-primary with-footer' }
) do |f| %>
  <legend class="panel-heading">
    <%= content_tag :h3, t("sipity/decorators/entitiy_enrichments.panels.#{model.processing_action_name}.title_html"), class: 'panel-title' %>
  </legend>

  <fieldset class="panel-body">
    <%= content_tag :p, t("sipity/decorators/entitiy_enrichments.panels.#{model.processing_action_name}.hint"), class: 'panel-hint' %>
    <%= f.error_notification %>
    <%= f.error :base, error_method: :to_sentence %>

    <%
      # TODO
      # appropriate styling required
    %>

    <%= f.input :subject, as: :multi_value, input_html: { class: 'form-control input-xlarge' }  %>
    <%= f.input :language, as: :multi_value, input_html: { class: 'form-control input-xlarge' } %>
    <%= f.input :temporal_coverage, as: :multi_value, input_html: { class: 'form-control input-xlarge' } %>
    <%= f.input :spatial_coverage, as: :multi_value, input_html: { class: 'form-control input-xlarge' } %>

  </fieldset>


  <div class="panel-footer action-pane">
    <%= f.submit nil, name: "form/#{model.processing_action_name}/submit" %>
  </div>
<% end %>

<div class="action-pane">
  <%= link_to t("sipity/decorators/entitiy_enrichments.cancel"), work_path(model.work), class: 'btn btn-default' %>
</div>
