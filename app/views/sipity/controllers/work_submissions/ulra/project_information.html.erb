<%= simple_form_for(view_object, url: request.path, as: :work, method: :post) do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, error_method: :to_sentence %>
  <div class="panel-tiles">
    <%= render(layout: 'sipity/form_panel', locals: { name: 'attributes', theme: :info, object: view_object }) do %>
      <%= f.input :title, as: :text, input_html: { class: 'redactor-input form-control' } %>
    <% end %>
    <%= render(layout: 'sipity/form_panel', locals: { name: 'work_publication_strategy', theme: :info, object: view_object }) do %>
      <%= f.input :work_publication_strategy, as: :radio_buttons, collection: view_object.work_publication_strategies_for_select %>
    <% end %>
    <%= render(layout: 'sipity/form_panel', locals: { name: 'award_category', theme: :info, object: view_object }) do %>
      <%= f.input :award_category, as: :radio_buttons, collection: view_object.award_categories_for_select %>
    <% end %>
    <%= render(layout: 'sipity/form_panel', locals: { name: 'course_information', theme: :info, object: view_object }) do %>
      <%= f.input :course_name %>
      <%= f.input :course_number %>
    <% end %>
  </div>
  <div class="action-pane">
    <%= f.submit %>
  </div>
<% end %>
