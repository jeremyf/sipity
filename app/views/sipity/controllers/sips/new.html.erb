<%= simple_form_for(model) do |f| %>
  <%= f.error_notification %>
  <%= model.with_form_panel('attributes') do %>
    <%= f.input :title %>
  <% end %>
  <%= model.with_form_panel('work_publication_strategy') do %>
    <%= f.input :work_publication_strategy, as: :radio_buttons, collection: model.work_publication_strategies_for_select %>
  <% end %>
  <%= model.with_form_panel('actions') do %>
    <%= f.submit %>
  <% end %>
<% end %>
