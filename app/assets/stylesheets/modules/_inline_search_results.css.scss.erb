@import 'bootstrap/variables';

.inline-search-results,
.inline-search-results ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.icon-arrows {
  background-image: url('<%= asset_path('loop2.svg') %>');
  height: 10px;
  margin-right: 6px;
  width: 10px;
}

.animate-spin {
  animation: spin 2s infinite linear;
  display: inline-block;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(359deg);
  }
}

.inline-search-results {
  .result-selector {
    display: block;
    outline: 2px solid transparent;
    padding: .3em .5em;

    &,
    &:active,
    &:focus,
    &:hover,
    &:visited {
      color: $text-color;
      text-decoration: none;
    }

    &:active,
    &:focus,
    &:hover {
      outline: 2px solid $input-border-focus;
    }
  }

  > li {
    margin: 0;

    &:nth-child(even) {
      background-color: $table-bg-accent;
    }
  }
}
